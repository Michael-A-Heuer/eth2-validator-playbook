[Unit]
Description=Ethereum Besu Client (ETH1)
After=network.target
Wants=network.target

[Service]
Type=simple
User=besu
Group=besu
UMask=0077
Restart=always
RestartSec=5
SyslogIdentifier=besu
ExecStart=/var/lib/besu/besu-client/bin/besu \
    --data-path=/var/lib/besu/chaindata

[Install]
WantedBy=default.target
